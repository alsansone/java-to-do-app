<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.adamsansone.todolist.DialogController" stylesheets="@styles.css">
    <headerText>
        Add an item to your todo list
    </headerText>
    <content>
        <GridPane styleClass="dialogPane">
            <Label text="Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="description" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Details:" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
            <TextArea fx:id="details" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Deadline:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadlineDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
